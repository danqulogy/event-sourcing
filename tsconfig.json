{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"strict": true,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./lib",
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"paths": {
			"@ocoda/event-sourcing": [
				"lib",
			],
			"@ocoda/event-sourcing/*": [
				"lib/*",
			],
		}
	},
	"include": [
		"lib/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"tests",
	],
}