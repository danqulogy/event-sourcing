{
	"compilerOptions": {
		"allowJs": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es7"
		],
		"module": "commonjs",
		"noImplicitAny": false,
		"noLib": false,
		"noUnusedLocals": false,
		"outDir": "dist",
		"paths": {
			"@ocoda/event-sourcing": [
				"./lib"
			],
			"@ocoda/event-sourcing/*": [
				"./lib/*"
			],
		},
		"removeComments": true,
		"sourceMap": true,
		"target": "es6",
		"useUnknownInCatchVariables": false,
	},
}