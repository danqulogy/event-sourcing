{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./",
		"skipLibCheck": true,
		"paths": {
			"@ocoda/event-sourcing": [
				"./lib"
			],
			"@ocoda/event-sourcing/*": [
				"./lib/*"
			],
		},
	},
	"include": [
		"lib/**/*",
		"tests/**/*",
		"example/**/*"
	],
	"exclude": [
		"node_modules"
	]
}